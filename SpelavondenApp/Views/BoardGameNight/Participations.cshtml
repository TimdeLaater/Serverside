@model SpelavondenApp.Models.BoardGameNight.MyBoardGameNightsViewModel

<h2>Your Participated Board Game Nights</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Upcoming Participations</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Participants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.UpcomingBoardGameNights != null && Model.UpcomingBoardGameNights.Any())
                {
                    foreach (var night in Model.UpcomingBoardGameNights)
                    {
                        <tr>
                            <td>@night.Date.ToString("yyyy-MM-dd")</td>
                            <td>@(night.Participants != null ? night.Participants.Count() : 0) / @night.MaxPlayers</td>
                            <td>
                                <a href="@Url.Action("Details", "BoardGameNight", new { id = night.BoardGameNightId })" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No upcoming participations</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h3>Past Participations</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Participants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PastBoardGameNights != null && Model.PastBoardGameNights.Any())
                {
                    foreach (var night in Model.PastBoardGameNights)
                    {
                        <tr>
                            <td>@night.Date.ToString("yyyy-MM-dd")</td>
                            <td>@(night.Participants != null ? night.Participants.Count() : 0) / @night.MaxPlayers</td>
                            <td>
                                <a href="@Url.Action("Details", "BoardGameNight", new { id = night.BoardGameNightId })" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No past participations</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
