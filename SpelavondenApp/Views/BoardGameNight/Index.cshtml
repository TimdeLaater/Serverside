@{
}
@model IEnumerable<SpelavondenApp.Models.BoardGameNight.BoardGameNightIndexViewModel>

<h2>Board Game Nights</h2>
<br/>
<p>
    <a asp-action="Create">Organise a game night here</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Organizer</th>
            <th>Participants</th>
            <th>18+?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gameNight in Model)
        {
            <tr onclick="location.href='@Url.Action("Details", new { id = gameNight.Id })'">
                <td>@gameNight.Date.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@gameNight.OrganizerName</td>
                <td>@gameNight.ParticipantCount / @gameNight.MaxPlayers</td>
                <td>@(gameNight.Is18Plus ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

<style>
    tr:hover {
        cursor: pointer;
        background-color: #f5f5f5;
    }
</style>